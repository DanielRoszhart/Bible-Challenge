<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4472C4"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/txtViewInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Tap the button to generate a category"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtViewCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:gravity="center"
        android:text="Categories: People, Place, Thing, Church History"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/txtViewInstructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnPush"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Tap"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="145dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Category_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Result"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/btnPush"
        android:layout_alignBottom="@+id/btnPush"
        android:layout_toRightOf="@+id/btnPush"
        android:layout_toEndOf="@+id/btnPush"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />

    <Button
        android:id="@+id/btnCategoryNext"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Category_Result"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Category_Result"
        android:layout_marginBottom="37dp"
        android:text="Next" />

</RelativeLayout>