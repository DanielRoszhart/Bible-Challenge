<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4472C4"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/txtViewInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Push the button to generate a category"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtViewCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Categories: People, Place, Thing, Church History"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/txtViewInstructions"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnPush"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Tap"
        android:layout_marginBottom="93dp"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/Category_Result"
        android:layout_toStartOf="@+id/Category_Result" />

    <TextView
        android:id="@+id/Category_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Result"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/btnPush"
        android:layout_alignRight="@+id/txtViewCategories"
        android:layout_alignEnd="@+id/txtViewCategories"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <Button
        android:id="@+id/btnCategoryNext"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Category_Result"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Category_Result"
        android:layout_marginBottom="14dp"
        android:text="Next" />

</RelativeLayout>