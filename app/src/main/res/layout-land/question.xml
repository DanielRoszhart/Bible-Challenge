<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4472C4"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="@string/txtViewQuestion"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/txtViewQuestion"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnOptionA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Button"
        android:layout_above="@+id/btnOptionB"
        android:layout_alignLeft="@+id/btnOptionB"
        android:layout_alignStart="@+id/btnOptionB" />

    <Button
        android:id="@+id/btnOptionB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Button"
        android:layout_above="@+id/btnOptionC"
        android:layout_alignLeft="@+id/btnOptionC"
        android:layout_alignStart="@+id/btnOptionC" />

    <Button
        android:id="@+id/btnOptionC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Button"
        android:layout_above="@+id/btnOptionD"
        android:layout_alignLeft="@+id/btnOptionD"
        android:layout_alignStart="@+id/btnOptionD" />

    <Button
        android:id="@+id/btnOptionD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>